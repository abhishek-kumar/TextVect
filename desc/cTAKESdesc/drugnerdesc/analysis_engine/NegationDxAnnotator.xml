<externalResourceDependencies>
<externalResourceDependency>
<key>BoundaryData</key>
<description>the file resource handle that will be used in the annotator</description>
<interfaceName>edu.mayo.bmi.uima.common.resource.FileResource</interfaceName>
<optional>false</optional>
</externalResourceDependency>
</externalResourceDependencies>
<resourceManagerConfiguration>
<externalResources>
<externalResource>
<name>BoundaryDataFile</name>
<description>Represents tokens that signifies negation boundary</description>
<fileResourceSpecifier>
<fileUrl>file:necontextresources/boundaryData.txt</fileUrl>
</fileResourceSpecifier>
<implementationName>edu.mayo.bmi.uima.common.resource.FileResourceImpl</implementationName>
</externalResource>
</externalResources>
<externalResourceBindings>
<externalResourceBinding>
<key>BoundaryData</key>
<resourceName>BoundaryDataFile</resourceName>
</externalResourceBinding>
</externalResourceBindings>
